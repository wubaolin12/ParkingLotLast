<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<mapper namespace="org.great.mapper.Mapper">
		<select id="getColname" parameterType="String" resultType="String" > 
		
		SELECT COLUMN_NAME FROM USER_TAB_COLS WHERE TABLE_NAME =#{tb_name} order by rownum desc
		</select>

<!-- 		<select id="pageList" parameterType="String" resultType="map" > 
			 select * from dual where TABLE_NAME
			  <![CDATA[#{t}]]>
			
		</select>  -->
	<insert id="interObject" parameterType="String">
		${value}
	</insert>
	
	
	<update id="delObject" parameterType="String" >
			${value} 
	</update>
		
	<update id="updateObject" parameterType="String" >
			${value} 
	</update>
	
	<select id="getCordnum"  resultType="java.lang.Integer" > 
		${value} 
	</select>
	

	<update id="updateInventoryBatch"  parameterType="java.util.Map">
   	 <foreach item="key"  collection="inventoryMap.keys" separator=";" >
      UPDATE yanxuan_inventory_transfer
        SET
        inventory = #{inventoryMap[${key}]},
        is_inventory='1',
        create_time=sysdate()
      where
        sku_id=#{key}
   	 </foreach>
	</update>

	<insert id="insertData" parameterType="java.util.Map">
        insert into ${tb_name}
        <foreach collection="dataMap.keys" separator="," item="key" open="(" close=")">
            ${key}
        </foreach>
        values
        <foreach collection="dataMap.keys" item="key" separator="," open="(" close=")">
            #{dataMap[${key}]}
        </foreach>
    </insert>

		
</mapper>